@{
}

<center>
    <span class="sub-title style2">Subsciption info</span>

</center>

<div class="price-card rounded-lg tilt-active">
    <span class="offer-tag">Save Over 25%</span>
    <div class="price-bg-shape"><img src="~/HomeAssets/img/bg/pricing-box-bg.png" alt="img" class=""></div>
    <div class="shape-mockup jump d-none d-xl-block" data-bottom="-5%" data-left="0%"><img src="~/HomeAssets/img/shape/appointment-bg-shape.png" alt="shape"></div>

    <h3 class="price-card_title box-title">Subscription Details</h3>
    <div class="price-card_content">
        <h4 class="price-card_price">@Model.Subscription.Type.Name</h4>
        <div class="available-list">
            <ul class="checklist">
                <li></li>
                <li></li>
                <li><i class="fa-solid fa-calendar-days"></i>Subscription Date: @Model.Subscription.Subscriptiondate.Value.ToString("MM/dd/yyyy")</li>
                <li><i class="fa-solid fa-users"></i>Beneficiaries:</li>
                <li></li>

                </ul>
               
                <ol>
                  @{
                     
                   foreach (var item in @Model.Beneficiaries)
                        {
                        <li>@item.Relationship  <i class="fa-solid fa-arrow-right-long"></i>  Request Status: @item.Requeststatus</li>


                    }
                   } 

                </ol>

            
        </div>
    </div>

</div>
