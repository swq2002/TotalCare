@model AdminViewModel
@{
    Layout = "_AdminLayout";
}
<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="white_card card_height_100 mb_30">
                    <div class="white_card_header">
                        <div class="box_header m-0">
                            <div class="main-title">
                                <h3 class="m-0"></h3>
                            </div>
                        </div>
                    </div>
                    <div class="white_card_body">
                        <div class="QA_section">
                            <div class="white_box_tittle list_header">
                                <h4>Subscriptions Table</h4>
                                <form Active="#" asp-action="ManageSubs" method="post">
                                    <div class="d-flex justify-content-between">

                                        <div class="me-2">
                                            <label for="startDate">Start Date</label>
                                            <input type="date" class="form-control" for="startDate" name="startDate" placeholder="Start Date">
                                        </div>
                                        <div class="me-2">
                                            <label for="endDate">End Date</label>

                                            <input for="endDate" type="date" class="form-control" placeholder="End Date" name="endDate">
                                        </div>
                                        <div class="align-self-end">
                                            <button type="submit" href="#" class="btn btn-primary">Search</button>
                                        </div>
                                    </div>

                                </form>

                            </div>
                            <div class="QA_table mb_30">

                                <table class="table lms_table_active ">
                                    <thead>
                                        <tr>
                                            <th scope="col">Customer Name</th>
                                            <th scope="col">Subscription Name</th>
                                            <th scope="col">Subscription Date</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Subscriptions)
                                        {
                                            <tr>
                                                <th scope="row"> <a href="#" class="question_content"> @item.User.Fullname</a></th>
                                                <td>@item.Type.Name</td>
                                                <td>@item.Subscriptiondate.Value.Date</td>

                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
