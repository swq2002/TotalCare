@model UserViewModel

@{
    Layout = "_UserLayout";
}
<section class="space overflow-hidden bg-title">
    <div class="shape-mockup jump d-none d-xl-block" data-bottom="-5%" data-left="0%"><img src="~/HomeAssets/img/shape/appointment-bg-shape.png" alt="shape"></div>
    <div class="container rounded">

        <div class="title-area centered">
            <span class="sub-title">Edit your testimonial</span>
            <h2 class="sec-title text-white">Request for Editing Testimonial</h2>
        </div>
        <form asp-action="Edit" method="POST">
            <div class="row">
                <input type="hidden" asp-for="Testimonial.Testimonialid" />
                <input type="hidden" asp-for="Testimonial.Userid" />
                <div class="form-group col-md-12">
                    <input type="text" class="form-control" asp-for="Testimonial.Testimonialsubject" name="Testimonial.Testimonialsubject" id="Testimonial.Testimonialsubject" value=@Model.Testimonial.Testimonialsubject placeholder="Subject"> <i class="fal fa-user"></i>


                </div>

                <div class="form-group col-12">
                    <textarea asp-for="Testimonial.Testimonialtext" name="Testimonial.Testimonialtext" id="Testimonial.Testimonialtext" value=@Model.Testimonial.Testimonialtext cols="30" rows="3" class="form-control" placeholder="Type Your Testimonial"></textarea>
                </div>

                <center>
                    <div class="form-btn col-12"><button type="submit" class="th-btn style2">Submit Now <i class="far fa-paper-plane"></i></button></div>

                </center>
            </div>
            <p class="form-messages mb-0 mt-3"></p>
        </form>
    </div>

</section>


