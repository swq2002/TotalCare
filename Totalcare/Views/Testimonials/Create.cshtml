@model UserViewModel

@{
    Layout = null;
}
<section class="space overflow-hidden bg-title">
<div class="shape-mockup jump d-none d-xl-block" data-bottom="-5%" data-left="0%"><img src="~/HomeAssets/img/shape/appointment-bg-shape.png" alt="shape"></div>
<div class="container rounded">

    <div class="title-area centered">
            <span class="sub-title">Add a testimonial</span>
            <h2 class="sec-title text-white">Request for Adding Testimonial</h2>
    </div>
    <form asp-action="Create" method="POST">
        <div class="row">

            <div class="form-group col-md-12">
                    <input type="text" class="form-control" asp-for="Testimonial.Testimonialsubject" name="Testimonial.Testimonialsubject" id="Testimonial.Testimonialsubject" placeholder="Subject"> <i class="fal fa-user"></i>

                
            </div>
         
            <div class="form-group col-12">
                    <textarea asp-for="Testimonial.Testimonialtext" name="Testimonial.Testimonialtext" id="Testimonial.Testimonialtext" cols="30" rows="3" class="form-control" placeholder="Type Your Testimonial"></textarea>
                </div>

            <center>
                <div class="form-btn col-12"><button type="submit" class="th-btn style2">Submit Now <i class="far fa-paper-plane"></i></button></div>

            </center>
        </div>
        <p class="form-messages mb-0 mt-3"></p>
    </form>
</div>

</section>


